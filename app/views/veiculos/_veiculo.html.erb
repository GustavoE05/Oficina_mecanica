<div id="<%= dom_id veiculo %>" class="design-info">
  <p>
    <strong>Modelo:</strong>
    <%= veiculo.modelo %>
  </p>

  <p>
    <strong>Placa:</strong>
    <%= veiculo.placa %>
  </p>

  <p>
    <strong>Cor:</strong>
    <%= veiculo.cor %>
  </p>

  <p>
    <strong>Dono:</strong>
    <%= veiculo.cliente.nome if veiculo.cliente %>
  </p>

  <%= link_to "Editar", edit_veiculo_path(veiculo), class: "btn btn-primary" %>
  <%= button_to "Deletar", veiculo, method: :delete, class: "btn btn-danger mt-1 " %>

</div>
